<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    tools:context=".ActivityJoin">

    <Button
        android:id="@+id/join_submit_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/nanum"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/join_name_input"
        app:layout_constraintStart_toStartOf="@+id/join_name_input"
        app:layout_constraintTop_toBottomOf="@+id/join_snBack_input" />

    <EditText
        android:id="@+id/join_snBack_input"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/nanum"
        android:foregroundGravity="center"
        android:inputType="phone"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#979797"
        android:textColorLink="#000000"
        android:textCursorDrawable="@color/design_default_color_on_secondary"
        app:layout_constraintBottom_toTopOf="@+id/join_submit_btn"
        app:layout_constraintEnd_toEndOf="@+id/join_id_input"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/join_id_input" />

    <EditText
        android:id="@+id/join_snFront_input"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/nanum"
        android:foregroundGravity="center"
        android:hint="주민등록번호"
        android:inputType="phone"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#979797"
        android:textColorLink="#000000"
        android:textCursorDrawable="@color/design_default_color_on_secondary"
        app:layout_constraintBottom_toBottomOf="@+id/join_snBack_input"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/join_id_input"
        app:layout_constraintTop_toTopOf="@+id/join_snBack_input" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:height="20dp"
        android:gravity="center"
        android:text="-"
        android:textColor="#252525"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/join_snFront_input"
        app:layout_constraintEnd_toStartOf="@+id/join_snBack_input"
        app:layout_constraintStart_toEndOf="@+id/join_snFront_input"
        app:layout_constraintTop_toTopOf="@+id/join_snFront_input" />

    <EditText
        android:id="@+id/join_pw_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/nanum"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#979797"
        android:textColorLink="#000000"
        android:textCursorDrawable="@color/design_default_color_on_secondary"
        app:layout_constraintBottom_toTopOf="@+id/join_pwCheck_input"
        app:layout_constraintEnd_toEndOf="@+id/join_name_input"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/join_name_input"
        app:layout_constraintTop_toBottomOf="@+id/join_name_input" />

    <EditText
        android:id="@+id/join_id_input"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/nanum"
        android:hint="연락처"
        android:inputType="phone"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#979797"
        android:textColorLink="#000000"
        android:textCursorDrawable="@color/design_default_color_on_secondary"
        app:layout_constraintBottom_toTopOf="@+id/join_snBack_input"
        app:layout_constraintEnd_toEndOf="@+id/join_pwCheck_input"
        app:layout_constraintStart_toStartOf="@+id/join_pwCheck_input"
        app:layout_constraintTop_toBottomOf="@+id/join_pwCheck_input" />

    <EditText
        android:id="@+id/join_pwCheck_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/nanum"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#979797"
        android:textColorLink="#000000"
        android:textCursorDrawable="@color/design_default_color_on_secondary"
        app:layout_constraintBottom_toTopOf="@+id/join_id_input"
        app:layout_constraintEnd_toEndOf="@+id/join_pw_input"
        app:layout_constraintStart_toStartOf="@+id/join_pw_input"
        app:layout_constraintTop_toBottomOf="@+id/join_pw_input" />

    <EditText
        android:id="@+id/join_name_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/nanum"
        android:hint="이름"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#979797"
        android:textColorLink="#000000"
        android:textCursorDrawable="@color/design_default_color_on_secondary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/join_pw_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>