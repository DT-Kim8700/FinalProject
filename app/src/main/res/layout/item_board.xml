<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/board_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8FF">

    <TextView
        android:id="@+id/board_item_num"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textAlignment="viewStart"
        android:textColor="#191919"
        app:layout_constraintBottom_toBottomOf="@+id/board_item_title"
        app:layout_constraintEnd_toStartOf="@+id/board_item_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/board_item_title" />

    <TextView
        android:id="@+id/board_item_title"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="타이틀"
        android:textAlignment="viewStart"
        android:textColor="#191919"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/board_item_name"
        app:layout_constraintStart_toEndOf="@+id/board_item_num"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/board_item_name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="네글자다"
        android:textAlignment="viewStart"
        android:textColor="#191919"
        app:layout_constraintBottom_toBottomOf="@+id/board_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/board_item_title"
        app:layout_constraintTop_toTopOf="@+id/board_item_title" />
</androidx.constraintlayout.widget.ConstraintLayout>