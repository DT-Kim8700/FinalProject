<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:text="성별 :  "
        android:textColor="#191919"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ward_gender"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/ward_gender" />

    <TextView
        android:id="@+id/ward_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:fontFamily="@font/nanum"
        android:text="-"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bracelet_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ward_sn"
        app:layout_constraintTop_toBottomOf="@+id/ward_sn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_siren"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bracelet_number"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="32dp"
        android:text="-"
        android:textAlignment="textStart"
        android:textColor="#252525"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bracelet_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:fontFamily="@font/nanum"
        android:text="팔찌번호 : "
        android:textColor="#191919"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bracelet_number"
        app:layout_constraintEnd_toStartOf="@+id/bracelet_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bracelet_number" />

    <TextView
        android:id="@+id/bracelet_end"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="-"
        android:textAlignment="textStart"
        android:textColor="#252525"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ward_name"
        app:layout_constraintEnd_toEndOf="@+id/bracelet_number"
        app:layout_constraintStart_toStartOf="@+id/bracelet_number"
        app:layout_constraintTop_toBottomOf="@+id/bracelet_number"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:text="반납기한 : "
        android:textColor="#191919"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bracelet_end"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/bracelet_end" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:text="생년월일 : "
        android:textColor="#191919"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ward_sn"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/ward_sn" />

    <TextView
        android:id="@+id/ward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:text="-"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ward_sn"
        app:layout_constraintEnd_toEndOf="@+id/bracelet_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bracelet_end"
        app:layout_constraintTop_toBottomOf="@+id/bracelet_end" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:text="피보호자 : "
        android:textColor="#191919"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ward_name"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/ward_name" />

    <TextView
        android:id="@+id/ward_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/nanum"
        android:text="-"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ward_gender"
        app:layout_constraintEnd_toEndOf="@+id/bracelet_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bracelet_end"
        app:layout_constraintTop_toBottomOf="@+id/ward_name" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="229dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:background="#F8F8FF"
        app:layout_constraintBottom_toTopOf="@+id/bracelet_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bracelet" />

</androidx.constraintlayout.widget.ConstraintLayout>